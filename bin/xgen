#! /bin/bash -e

FILE="${HOME}/.local/xgen"
if [ ! -f "$FILE" ]; then
	DIR=$(dirname "$FILE")
	mkdir -p "$DIR"
	touch "$FILE"
fi

chmod 600 "$FILE"

randomChar() {
	< /dev/urandom tr -dc 'A-Za-z0-9' | head -c1
}

PASSWORD="$(pwgen -cnsy -r "\"'$|\\/" 6 1),$(pwgen -cnsy -r "\"'$|\\/" 6 1)"

PASSWORD="$(randomChar)${PASSWORD}$(randomChar)"

echo -n -E "$PASSWORD" > "$FILE"
echo -E "$PASSWORD"

XCLIP=$(command -v xclip)
if [ -n "$XCLIP" ]; then
	echo -n -E "$PASSWORD" | xclip -selection clipboard
fi
