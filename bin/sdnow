#!/bin/bash

if [ -z "$DISPLAY" ]; then
	>&2 echo only run in X11
	exit 1
fi

cd "$(dirname "$(readlink -f "$0")")" || exit 1

mkdir -p /log/update || exit 1

FILE="/log/update/$(date "+%Y-%m-%d").txt"

if [ ! -f "$FILE" ]; then
	(
		../update/ubuntu.sh || exit 1
		touch "$FILE"
	)
fi

sudo shutdown -P 0
