#! /bin/bash -e

FILE="${HOME}/.local/pgen"
if [ ! -f "$FILE" ]; then
	DIR=$(dirname "$FILE")
	mkdir -p "$DIR"
	touch "$FILE"
fi

chmod 600 "$FILE"

PASSWORD=$(pwgen 15 1)

echo -n -E "$PASSWORD" > "$FILE"
echo -E "$PASSWORD"

XCLIP=$(command -v xclip)
if [ -n "$XCLIP" ]; then
	echo -n -E "$PASSWORD" | xclip -selection clipboard
fi
